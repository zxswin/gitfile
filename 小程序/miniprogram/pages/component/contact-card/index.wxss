/** 通用样式  */
.flex-block {
  display: flex;
  justify-items: flex-start;
  align-items: center;
}

.red {
  color: #f00;
}

/** 详情弹出层  */
.detail-content {
  background: #fff;
  width: 90%;
  height: 90%;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  position: relative;
}
.mask-close {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  z-index: 1000;
}
.mask-btn {
  display: inline-flex;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  z-index: 1000;
  font-size: 30rpx;
  justify-content: space-between;
  align-items: center;
}

.mask-btn:not([size='mini']) {
  width: auto;
  padding: 10rpx;
}

/** 主要内容区域  */
.card-content {
  position: absolute;
  top: 0;
  left: 0;
  padding-top: 100rpx;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 10;
}
.order-content {
  height: calc(100% - 120rpx);
}
.content-canvas {
  margin: auto;
}
