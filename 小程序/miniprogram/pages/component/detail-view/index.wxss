/** 详情弹出层  */
.detail-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.detail-content {
  background: #fff;
  width: 90%;
  height: 90%;
  border-radius: 20rpx;
  position: relative;
  padding: 30rpx;
  display: flex;
  justify-content: space-evenly;
  flex-direction: column;
}
.mask-close {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  z-index: 100;
}
.swiper-content {
  margin-bottom: 20rpx;
}
.detail-swiper {
  height: 400rpx;
}
.detail-text {
  margin-bottom: 20rpx;
}
.detail-text .d-text-box {
  margin-bottom: 10rpx;
}
.detail-title {
  font-size: 30rpx;
  color: #000;
}
.detail-sub-title {
  font-size: 24rpx;
  color: #888888;
}
.detail-dsc {
  font-size: 24rpx;
  color: #888888;
  line-height: 36rpx;
}

/** 规格选择  */
.detail-type {
  margin: 10rpx 0;
  color: #888888;
}
.d-type-title {
  font-size: 28rpx;
  padding: 10rpx 0;
}
.settle-l-pri {
  font-size: 40rpx;
  color: #07c160;
  margin-bottom: 10rpx;
}
.settle-l-dsc {
  font-size: 24rpx;
}

/** 产品详情图片展示部分  */
.detail-img-show {
  padding: 20rpx 0;
}
.detail-img-title {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 40rpx;
  border-left: 10rpx solid #07c160;
  color: #333;
}

.detail-img-img {
  margin-bottom: 20rpx;
  width: 100%;
}

/** 结算展示区  */
.settle-info {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #888888;
}
.settle-operation {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 10rpx 0;
}
.settle-op-l {
  width: 60%;
  margin-right: 30rpx;
}
.settle-op-r {
  width: 40%;
}
.bottom-btn {
  background: #07c160;
  color: #fff;
  height: 80rpx;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-btn:not([size='mini']) {
  width: 100%;
  min-height: 80rpx;
}

.settle-price {
  font-size: 40rpx;
}

.detail-scroll-view {
  height: 80%;
  padding-bottom: 20rpx;
}
