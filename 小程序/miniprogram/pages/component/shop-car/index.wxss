/** 公用样式部分  */
.display-flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.text-overflow {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
/** 滚动列表去除滚动条  */
.scroll-orderList::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/** 页面样式部分  */
.shop-box {
  width: 100%;
  position: relative;
}
/** 购物车列表展示部分  */
.shop-list {
  width: 100%;
  background: #fff;
  position: relative;
  top: 1200rpx;
  left: 0;
}

/** 清空购物车  */
.shop-list-header {
  justify-content: flex-start;
  background: #f6f7f9;
  padding: 20rpx;
}
.list-header-icon {
  width: 20px;
  height: 20px;
  background: url('data:image/png;base64,')
    no-repeat;
  background-size: contain;
  margin-right: 20rpx;
}
.list-header-text {
  font-size: 30rpx;
  color: #686868;
}

/** 购物车订单列表  */
.scroll-orderList {
  max-height: 600rpx;
  padding-bottom: 80rpx;
}
.shop-list-body {
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 2rpx solid #e4e4e4;
}
.list-body-des {
  width: 45%;
}
.body-des-maintitle {
  font-size: 30rpx;
  color: #000;
  margin-bottom: 12rpx;
}
.body-des-subtitle {
  font-size: 28rpx;
  color: #a2a2a2;
}
.list-body-price {
  width: 25%;
  color: #000;
  font-size: 36rpx;
  text-align: center;
}
.list-body-counter {
  width: 30%;
}

/** 购物袋及结算  */
.shop-settle-box {
  width: 100%;
  position: relative;
  top: 0;
  left: 0;
  z-index: 1000;
}
.settle-box-info {
  background: #e7e7e7;
  width: 65%;
  height: 120rpx;
  position: relative;
  padding-right: 20rpx;
}
.settle-box-btn {
  width: 35%;
  background: #07c160;
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
}
.box-info-clearprice {
  font-size: 36rpx;
  width: 100%;
  text-align: right;
  line-height: 120rpx;
}
.box-info-shopcar {
  position: absolute;
  top: -30rpx;
  left: 40rpx;
  background: #fff;
  width: 300rpx;
  height: 110rpx;
  border-radius: 100rpx;
}

.info-shopcar-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}
.info-shopcar-text {
  font-size: 36rpx;
  color: #000;
}
.info-shopcar-amount {
  position: absolute;
  top: -20rpx;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background: #07c160;
  border-radius: 50%;
  font-size: 32rpx;
}
